<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<blueprint default-activation="eager"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jpa="http://aries.apache.org/xmlns/jpa/v1.0.0"
           xmlns:tx="http://aries.apache.org/xmlns/transactions/v1.0.0">

  <!-- This gets the container-managed EntityManager and injects it into the RoleServiceImpl bean. -->
  <bean id="roleService" class="com.example.shop.base.dao.RoleServiceImpl">
    <jpa:context unitname="online-shop" property="entityManager"/>
    <tx:transaction method="*" value="Required"/>
  </bean>
  <service ref="roleService" interface="com.example.shop.base.dao.RoleService"/>


</blueprint>